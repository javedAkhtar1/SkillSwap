{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["scripts/**/*.ts", "lib/dbConnect.ts", "models/**/*.ts"],
  "exclude": ["node_modules", ".next", "pages", "components"]
}
